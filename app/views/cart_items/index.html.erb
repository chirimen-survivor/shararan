<h2><%= "#{ @cart_items[0].customer.last_name}のカート一覧" %></h2>

<div class="container">
  <div class="review">
    <% @cart_items.each do |cart| %>
      <table class = "table table-striped">

        <thead>
          <tr>
              <th>商品内容</th>
              <th>商品名</th>
              <th>数量</th>
              <th>価格(税抜)</th>
          </tr>
        </thead>

        <tbody>
            <tr>
              <td><%= "写真" %></td>
              <td><%= cart.product.name %></td>
              <td><%= cart.quantity %></td>
              <td><%= "¥ #{cart.product.price.to_s(:delimited)}" %></td>
            </tr>
        </tbody>
      </table>
    <% end %>
  </div>
  <hr class="my-4">
</div>
