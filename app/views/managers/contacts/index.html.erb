
<div class="container-fluid">
		<div class="row Maneger-Contact-box">
			<table class="col-l-6 table table-bordered">
			<p class="Contact-title">お問合せ一覧</p>
			<p class="Contact-text"><%= @contacts.length %>  件のお問い合わせがあります</p>
		    <thead>
		        <tr>
		            <th>顧客名</th>
		            <th>件名</th>
		            <th>送信日時</th>
		     		<th><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></th>
		        </tr>
		    </thead>
		    <% @contacts.each do |contact|%>
			    <tbody>
			        <tr>
			            <th><%= contact.customer.last_name %>さん</th>
			            <td><%= contact.title %></td>
			            <td><%= contact.created_at %></td>
			            <td><%= link_to '詳細', managers_contact_path(contact) %></td>
			        </tr>
			    </tbody>
		    <% end %>
			</table>
		</div>
	</div>