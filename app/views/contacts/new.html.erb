<h1>customers画面</h1>
<h3>お問合せフォーム</h3>

<div class="container">
	<div class="row">
	 <div class="col-lg-12">
	 	<%= form_for(@contact) do |f| %>
			<div class="row">
			 <div class="col-lg-6">メールアドレス</div><div class="col-lg-6"><%= f.text_field :email %></div>
			</div>
			<div class="row">
			 <div class="col-lg-6">件名</div><div class="col-lg-6"><%= f.text_field :title %></div>
			</div>
			<div class="row">
	 		 <div class="col-lg-6">お問い合わせ内容</div><div class="col-lg-6"><%= f.text_field :body %></div>
		 	</div>
		 	<div class="row">
	 		 <div class="col-lg-12"><%= f.submit '送信' %></div>
		 	</div>
	 	<% end %>
	 </div>
	</div>
</div>


