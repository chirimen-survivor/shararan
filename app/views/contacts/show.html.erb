<h1>manegers画面</h1>
	<h3>お問い合わせ詳細</h3>

<div class="container">
	<div class="row">
	  <div class="col-lg-6">
	 	<ul class="list-group">
			<li class="list-group-item">差出人</li>
			<li class="list-group-item">メールアドレス</li>
			<li class="list-group-item">件名</li>
			<li class="list-group-item">本文</li>
		</ul>
	  </div>
	  <div class="col-lg-6">
		<ul class="list-group">
			<li class="list-group-item">顧客名</li>
			<li class="list-group-item"><%= @contact.email %></li>
			<li class="list-group-item"><%= @contact.title %></li>
			<li class="list-group-item"><%= @contact.body %></li>
		</ul>
	  </div>
	</div>
	<div class="row">
	  <div class="col-lg-6">
	 	<ul class="list-group">
			<li class="list-group-item">宛先</li>
			<li class="list-group-item">件名</li>
			<li class="list-group-item">返信内容</li>
		</ul>
	  </div>
	  <div class="col-lg-6">
		<ul class="list-group">
			<li class="list-group-item"><%= @contact.email %></li>
			<li class="list-group-item"><%= @contact.title %></li>
			<%= form_for(@contact) do |f| %>
			<li class="list-group-item"><%= f.text_field :reply_message %></li>
		</ul>
	  </div>
	</div>
	<div class="row">
		<div class="col-lg-3">
    	 	<%= f.submit '送信する' %>
    	</div>
    </div>
			<% end %>
</div>