<% if flash[:notice] %>
<div class="flash">
	<%= flash[:notice]%>
</div>
<% end %>
<!-- エラーメッセージ -->
<% if @contact.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container Contact">
	<div class="row"><div class="Contact-Tanaka col-md-12">Contact Tanaka</div></div>
	<div class="row">
	 <div class="Contact-box col-md-12">
	 	<%= form_for @contact , url: customer_contacts_path do |f| %>
			<div class="Contact-box-contents row">
			 <div class="col-md-4">メールアドレス</div><div class="col-md-6"><%= f.text_field :email %></div>
			</div>
			<div class="Contact-box-contents row">
			 <div class="col-md-4">件名</div><div class="col-md-6"><%= f.text_field :title %></div>
			</div>
			<div class="Contact-box-contents row">
	 		 <div class="col-md-4">お問い合わせ内容</div><div class="col-md-6"><%= f.text_field :body %></div>
		 	</div>
		 	<div class="Contact-box-contents row">
	 		 <div class="button col-md-12"><%= f.submit '送信する' %></div>
		 	</div>
	 	<% end %>
	 </div>
	</div>
</div>