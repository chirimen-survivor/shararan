<div class="container">
	<div class="mypage-info">
	<%= form_for(@customer) do |f| %>
	 	<div class="row">
      <div class=" mypage_text">
	 		  <div class="co-lg-6">
		      <h3>お名前</h3>
          <div class = "mypage_column1">
		        <%= f.text_field :last_name %>
            <div class = "mypage_column2">
		          <%= f.text_field :first_name %>
            </div>
          </div>
	 		  </div>
      </div>
    </div>
    <div class="row">
      <div class=" mypage_text">
	 	   <div class="co-lg-6">
		    <h3>お名前（フリガナ）</h3>
          <div class = "mypage_column1">
		        <%= f.text_field :last_name_kana %>
            <div class = "mypage_column2">
		          <%= f.text_field :first_name_kana %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class=" mypage_text">
        <div class="co-lg-6">
		      <h3>住所</h3>
          <div class = "mypage_column3">
            〒 <%= f.text_field :postal_code1, size:"10x10" %> - <%= f.text_field :postal_code2, size:"10x10" %>
          </div>
          <div class = "My_address">
            <div class = "mypage_column4">
		          <!-- 都道府県はプルダウン式にするのでcollectionを使います。 -->
		          <%= f.collection_select :prefecture_code, JpPrefecture::  Prefecture.all, :code, :name %>
            </div>
            <div class = "mypage_column6">
		          <%= f.text_field :city, size:"35x10" %>
            </div>
            <div class = "mypage_column5">
		          <%= f.text_area :building, size: "30x3" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class=" mypage_text">
        <div class="co-lg-6">
        	<h3>電話番号</h3>
          <div class = "mypage_column1">
		        <%= f.text_field :phone_number1, size:"10x10" %> - 
		        <%= f.text_field :phone_number2, size:"10x10" %> - 
		        <%= f.text_field :phone_number3, size:"10x10" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class=" mypage_text">
        <div class="co-lg-6">
        		<h3>メールアドレス</h3>
            <div class = "mypage_column1">
		          <%= f.email_field :email, size:"40x10" %>
            </div>
          </div>
        </div>
      </div>
      <div class = "mypage_submit">
			 <%= f.submit '変更する' %>
      </div>
      </div>
		</div>
	</div>
<% end %>

<div class="container">
  <h2>レビュー一覧</h2>
  <div class="myreview">
    <% @reviews.each do |r| %>
    <div class = myreview_star>
     <div id="star-rate-<%= r.id %>"></div>
        <script>
        $('#star-rate-<%= r.id %>').raty({
          size: 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          half: true,
          readOnly: true,
          score: <%= r.rating %>,
        });
        </script>
      </div>
      <div class = "myreview_title">
        <%= r.title %>
      </div>
      <div class = "myreview_column">
        <div class = "myreview_time">
          <%= r.created_at.strftime('%Y/%m/%d') %>
        </div>
        <div class = "myreview_product">
          <%= r.product.name %>
        </div>
      </div>
      <div class = "myreview_body">
        <%= r.body %>
      </div>
    <% end %>
  </div>
</div>
<div class = "text-center">
  <%= paginate @reviews, class: "paginatate" %>
</div>
