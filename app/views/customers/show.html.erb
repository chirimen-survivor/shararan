<h1>マイページ</h1>

<div><h2>ヘッダー</h2></div>


<%= form_for(@customer) do |f| %>

	<h3>お名前</h3>
	<%= f.text_field :last_name %>
	<%= f.text_field :first_name %>
	

	<h3>お名前（フリガナ）</h3>
	<%= f.text_field :last_name_kana %>
	<%= f.text_field :first_name_kana %>

	<h3>住所</h3>
	<%= f.text_field :postal_code1 %>
	<%= f.text_field :postal_code2 %>

	<!-- 都道府県はプルダウン式にするのでcollectionを使います。 -->

	<%= f.text_field :city %>

	<h3>電話番号</h3>
	<%= f.number_field :phone_number1 %>
	<%= f.number_field :phone_number2 %>
	<%= f.number_field :phone_number3 %>

	<h3>メールアドレス</h3>
	<%= f.email_field :email %>

	<%= f.submit '変更する' %>

<% end %>

<h2>レビュー一覧</h2>


