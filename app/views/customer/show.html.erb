<h1>マイページ</h1>

<div><h2>ヘッダー</h2></div>


<% form_for(@customer) do |f| %>

	<h3>お名前</h3>
	<h3><%= f.text_field :last_name %></h3>
	<h3><%= f.text_field :first_name %></h3>

	<h3>お名前（フリガナ）</h3>
	<h3><%= f.text_field :last_name_kana %></h3>
	<h3><%= f.text_field :first_name_kana %></h3>

	<h3>住所</h3>
	<h3><%= f.text_field :postal_code1 %></h3>
	<h3><%= f.text_field :postal_code2 %></h3>

	<!-- 都道府県はプルダウン式にするのでcollection_selectを使います。 -->
	<h3><%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name %></h3>
	<h3><%= f.text_field :city %></h3>

	<h3>電話番号</h3>
	<h3><%= f.text_field :phone_number1 %></h3>
	<h3><%= f.text_field :phone_number2 %></h3>
	<h3><%= f.text_field :phone_number3 %></h3>

	<h3>メールアドレス</h3>
	<h3><%= f.text_field :email %></h3>

	<h3>パスワード</h3>
	<h3><%= f.text_field :password %></h3>

	<%= f.submit '変更する' %>

<% end %>

<h2>レビュー一覧</h2>

<% @customer.reviews.each do |j| %>
	<h3><%= j.rating %></h3>
	<h3><%= j.title %></h3>
	<h3><%= j.created_at %></h3>
	<!-- 	商品名から商品詳細に飛べるようにします。 -->
	<h3><%= link_to "#{@review.name}" product_path(@product.id) %></h3>
	<h3><%= j.body %></h3>
<% end %>
