
<!--- 商品情報 -->
<div class="container padding">
    <hr class="my-4">
    <div class="row padding">
      <div class="col-lg-5 col-lg-offset-1">
        <img src="https://www.pakutaso.com/shared/img/thumb/00_PP59_PP_TP_V.jpg" class="img-size">
      </div>
      <div class="col-lg-6">
        <h2><%= @product.name %></h2>
        <p><%= "アーティスト名: #{@product.artist.name}" %></p>
        <ul class="cp_tag01">
          <li><a href="#"><%= "#{@product.categorie.name}" %></a></li>
        <p class="price"><%= "¥ #{@product.price.to_s(:delimited)} 税込" %></p>
        </ul>
        <p class="amount">数量</p>
        <form action="#" method="post" class="form-position">
          <input type="text" name="name"></p>
        </form>
      </div>
    </div>
    <hr class="my-4">
</div>

<div class="container">
    <div class="icon-field">
      <button type="button" class="btn btn-block btn-info">カートに入れる</button>
        <%= render "favorites/favorite", product: @product %>
    </div>
</div>

<div class="container">
    <hr class="my-4">
    <div class="product-release">
      <h4>商品の情報</h4>
      <p><%= "発売日  #{@product.release_date}" %></p>
      <p><%= "レーベル名: #{@product.company.name}" %></p>
    </div>
    <hr class="my-4">
    <div class="product-description">
      <h4>商品説明</h4>
      <p><%= @product.description %></p>
    </div>
    <hr class="my-3">
</div>

<div class="container">
  <h4>構成数:2枚組</h4>
  <br>
  <p>曲名</p>
  <div class="disk-info">
    <div class="disk1">
      <p>Disk1</p>
      <p>ヴォルフガング・アマデウス・モーツァルト</p>
      <p>1.セレナーデ</p>
      <p>2.アマデウス</p>
    </div>
    <div class="disk2">
      <p>Disk2</p>
      <p>ブラームス</p>
      <p>1.交響曲1~4</p>
      <p>2.アルトラプソディ</p>
    </div>
  </div>
  <hr class="my-4">
</div>

<!--- レビュー一覧 -->
<div class="container">
  <div class="review">
    <% @reviews.each do |r| %>
  <table class = "table table-striped">
    <tr>
      <th>評価</th>
      <th>商品名</th>
      <th>作成日時</th>
      <th>タイトル</th>
      <th>本文</th>
    </tr>

    <tr>
        <td><%= r.rating %></td>
        <td><%= @product.name %></td>
        <td><%= r.created_at %></td>
        <td><%= r.title %></td>
        <td><%= r.body %></td>
      </tr>
    </table>
    <% end %>
  </div>
  <hr class="my-4">
</div>

<!--- レビュー投稿 -->
<div class="container">
<%= form_for [@product, @review] do |f| %>
  <%= render 'share/error_messages', object: f.object %>

    <h3>評価</h3>
    <%= f.select :rating, [[0.5, 0.5], [1.0,1.0],[1.5,1.5],[2.0,2.0],[2.5,2.5],[3.0,3.0],[3.5,3.5],[4.0,4.0],[4.5,4.5],[5.0,5.0]], :selected => 3.0 %>
    <h3>タイトル</h3>
    <%= f.text_field :title %>
    <h3>本文</h3>
    <%= f.text_area :body %>

    <%= f.submit '投稿する' %>
  <% end %>
</div>
