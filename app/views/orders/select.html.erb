
<!-- お届け先、支払い方法の選択 -->
<%= form_tag( new_customer_order_path, method: :get) do %>

<div class="container">
		<div class="row">
			<div class="col-md-5">
				<div class="page-header">
					<h2 class="title-head">お届け先、支払い方法の選択</h2>
				</div>
			</div>
		</div>

		<div class="container">
		<div class="row">
				<div class="cart-role">
					<div class="col-md-3">
						<ul class="list-unstyled">
						<li class="ec-progress-item text-center">
							<span class="fa-stack fa-lg">
								<i class="fa fa-circle fa-stack-2x"></i>
								<i class="fa fa-inverse fa-stack-1x">1</i>
							</span>
							<div class="ec-progress__label">カートの商品</div>
						</li>
					</ul>
					</div>

					<div class="col-md-3">
						<ul class="list-unstyled">
						<li class="ec-progress-item text-center">
							<span class="fa-stack fa-lg">
								<i class="fa fa-circle fa-stack-2x"></i>
								<i class="fa fa-inverse fa-stack-1x">2</i>
							</span>
							<div class="ec-progress__label">お届け先・支払い方法の選択</div>
						</li>
					</ul>
					</div>
					<div class="col-md-3">
						<ul class="list-unstyled">
						<li class="ec-progress-item text-center">
							<span class="fa-stack fa-lg">
								<i class="fa fa-circle fa-stack-2x"></i>
								<i class="fa fa-inverse fa-stack-1x">3</i>
							</span>
							<div class="ec-progress__label">ご注文内容のご確認</div>
						</li>
					</ul>
					</div>
					<div class="col-md-3">
						<ul class="list-unstyled">
						<li class="ec-progress-item text-center">
							<span class="fa-stack fa-lg">
								<i class="fa fa-circle fa-stack-2x"></i>
								<i class="fa fa-inverse fa-stack-1x">4</i>
							</span>
							<div class="ec-progress__label">ご注文完了</div>
						</li>
					</ul>
					</div>
				</div>
			</div>
		</div>

		<div class="container">
		<div class="row">
			<div class="col-md-3 md-offset-3">
				<div class="select-address">
					<h3 class="title-head">お届け先指定</h3>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="label2">
			<div class="col-md-10">

						<%= radio_button_tag 'address', 0 %>
						<label>名前</label>:
						<label>
							<%= @customer.last_name + @customer.first_name %></label><br/><br/>
						<div class="col-md-2">
						<label>住所</label>:
						<label>
							〒<%= @customer.postal_code1 %> - <%= @customer.postal_code2 %></label>
						</div>
						<div class="col-md-10 text-left">
						<label>
							<%= @customer.prefecture_name + @customer.city + @customer.building %>
						</label><br/><br/><br/>
						</div>

						<% @addresses.each do |address| %>
						<%= radio_button_tag 'address', address.id %>
						<label>名前</label>:
						<label>
							<%= address.last_name + address.first_name %></label><br/><br/>
						<div class="col-md-2">
						<label>住所</label>:
						<label>
							〒<%= address.postal_code1 %> - <%= address.postal_code2 %></label>
						</div>
						<div class="col-md-10 text-left">
						<label>
							<%= address.prefecture_name + address.city + address.building %>
						</label><br/><br/><br/>
						</div>

						<% end %>
				</div>
			</div>
			</div>
		</div>
	</div>


		<div class="container">
		<div class="row">
			<div class="col-md-3">
				<div class="select-address">
					<h3 class="title-head">支払方法選択</h3>

  					<label>
						<%= radio_button_tag 'payment', 0 %>銀行振込
  					</label>
  					<br/>
  					<label>
						<%= radio_button_tag 'payment', 1 %>
  						クレジットカード
  					</label>
  					<br/>
  					<label>
						<%= radio_button_tag 'payment', 2%>
  						代引き
  					</label>


				</div>
			</div>


		</div>
	</div>

	<div class="container">
			<div class="row">
				<div class="col-md-12 text-center">
						<%= link_to "カートへ戻る", root_path, class: 'btn btn-default btn-lg' %>
				</div>
			</div>
		</div>

		<div class="container">
		<div class="row">
			<div class="col-md-4 pull-right">
					<div class="col-md-4 text-left">小計
					</div>
					<div class="col-md-4 text-right">
						¥
					</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4 pull-right">
					<div class="col-md-4 text-left">
						送料
					</div>

					<div class="col-md-4 text-right">
						¥ 500
					</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-4 pull-right">
					<div class="col-md-3 text-left">
						<h4>合計</h4>
					</div>

					<div class="col-md-4 text-right">
						<h4>
						¥ <%= number_with_delimiter(@order.total * @order.tax_id) %>
						</h4>
					</div>
			</div>
		</div>
		</div>
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2 text-right">
						<%= submit_tag "確認画面へ", class: 'btn btn-default btn-md' %>
				</div>
			</div>
		</div>

</div>
<% end %>