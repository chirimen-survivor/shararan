<!-- 購入確認画面を表示する -->

<div class="container">
		<div class="row">
			<div class="col-md-4">
				<div class="page-header">
					<h2 class="title-head">ご注文内容のご確認</h2>
				</div>
			</div>
		</div>

		<div class="container">
		<div class="row">
				<div class="cart-role">
					<div class="col-md-3">
						<ul class="list-unstyled">
						<li class="ec-progress-item text-center">
							<span class="fa-stack fa-lg">
								<i class="fa fa-circle fa-stack-2x"></i>
								<i class="fa fa-inverse fa-stack-1x">1</i>
							</span>
							<div class="ec-progress__label">カートの商品</div>
						</li>
					</ul>
					</div>

					<div class="col-md-3">
						<ul class="list-unstyled">
						<li class="ec-progress-item text-center">
							<span class="fa-stack fa-lg">
								<i class="fa fa-circle fa-stack-2x"></i>
								<i class="fa fa-inverse fa-stack-1x">2</i>
							</span>
							<div class="ec-progress__label">お届け先・支払い方法の選択</div>
						</li>
					</ul>
					</div>
					<div class="col-md-3">
						<ul class="list-unstyled">
						<li class="ec-progress-item text-center">
							<span class="fa-stack fa-lg">
								<i class="fa fa-circle fa-stack-2x"></i>
								<i class="fa fa-inverse fa-stack-1x">3</i>
							</span>
							<div class="ec-progress__label">ご注文内容のご確認</div>
						</li>
					</ul>
					</div>
					<div class="col-md-3">
						<ul class="list-unstyled">
						<li class="ec-progress-item text-center">
							<span class="fa-stack fa-lg">
								<i class="fa fa-circle fa-stack-2x"></i>
								<i class="fa fa-inverse fa-stack-1x">4</i>
							</span>
							<div class="ec-progress__label">ご注文完了</div>
						</li>
					</ul>
					</div>
				</div>
			</div>
		</div>


		

		<div class="container">
			<div class="row">
				<div class="col-md-6 text-right">
					<div class="row">
						<div class="col-md-4">
							<div class="label2">お届け先住所</div>
						</div>
					</div>

					<div class="row">
						<div class="col-md-8">
							<label>名前</label>:
						<label>
							<%= @customer.last_name + @customer.first_name %></label><br/><br/>
						<div class="col-md-2">
						<label>住所</label>:
						<label>
							〒<%= @order.postal_code1 %> - <%= @order.postal_code2 %></label>
						</div>
						<div class="col-md-10 text-left">
						<label>
							<%= @order.other_address.prefecture_code + @order.other_address.city + @order.other_address.building %>
						</label>
						</div>
					</div>

				</div>
			</div>
		</div>








</div>









